{
    "genNotice" : [
        "/*********************************************************************************",
        "*   This Software Shader Maya plugin was automatically generated by the Maya     *",
        "*                                generation wizard                               *",
        "**********************************************************************************/\n"
    ],

    "includes" : [
        "#include \"%_#_INCLUDE_#_%\"",
        "#include <maya/MGlobal.h>",
        "#include <maya/MStatus.h>",
        "#include <maya/MObject.h>",
        "#include <maya/MFnPlugin.h>"
    ],

    "fn_initPlug": [
        "MStatus initializePlugin(MObject obj)",
        "{",
            "\tMStatus status;",
            "",
            "\t// a classification for where the node will appear on the create menus",
            "\t// of the multilister and hypershade.",
            "\t// this will need to be filled in before compilation",
            "\t#error Enter a value into the following string before compilation, such as shader/surface and then delete this line",
            "\tconst MString menuClassify(\"\");",
            "",
            "\tMFnPlugin plugin( obj, \"%_#_VENDOR_#_%\", \"%_#_VERSION_#_%\", \"%_#_REQAPIVER_#_%\");",
            "",
            "\t// Register the shader with the system",
            "\tstatus =  plugin.registerNode(%_#_CLASSNAME_#_%::m_typeName,%_#_CLASSNAME_#_%::m_typeId,%_#_CLASSNAME_#_%::creator,%_#_CLASSNAME_#_%::initialize,MPxNode::kDependNode,&menuClassify);",
            "",
            "\tif (status != MS::kSuccess)",
            "\t{",
                    "\t\tMGlobal::displayInfo(\"Error registering the Software Shader\");",
                    "\t\tstatus.perror(\"Maya::registerSoftwareShader\");",
            "\t}",
            "\treturn status;",
        "}"
    ],

    "fn_uninitPlug": [
        "MStatus uninitializePlugin(MObject obj)",
        "{",
            "\tMFnPlugin plugin(obj);",
            "\tMStatus status =  plugin.deregisterNode(%_#_CLASSNAME_#_%::m_typeId);;",
            "\tif (status != MS::kSuccess)",
            "\t{",
                "\t\tMGlobal::displayInfo(\"Error removing Software Shader\");",
                "\t\tstatus.perror(\"Maya::deregisterSoftwareShader\");",
            "\t}",
            "",
            "\treturn status;",
        "}"
    ]
}
