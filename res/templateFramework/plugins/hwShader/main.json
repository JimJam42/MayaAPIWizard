{
    "genNotice" : [
        "//************************************************************************************",
        "//     This Hardware Shader Maya plugin was automatically generated by the Maya      *",
        "//                                 generation wizard                                 *",
        "//************************************************************************************/\n"
    ],

    "includes" : [
        "#include \"%_#_HWINCLUDE_#_%\"",
        "#include \"%_#_HWOVERRIDEINCLUDE_#_%\"",
        "#include <maya/MGlobal.h>",
        "#include <maya/MStatus.h>",
        "#include <maya/MObject.h>",
        "#include <maya/MFnPlugin.h>",
        "#include <maya/MDGMessage.h>",
        "#include <maya/MDrawRegistry.h>"
    ],

    "fn_initPlug": [
        "MStatus initializePlugin(MObject obj)",
        "{",
            "\tMStatus status;",
            "\tMFnPlugin plugin(obj, \"%_#_VENDOR_#_%\", \"%_#_VERSION_#_%\" , \"%_#_REQAPIVER_#_%\" );",
            "",
            "\t#error Enter a value into the following string before compilation, such as shader/surface and then delete this line",
            "\tconst MString menuClassify(MString(\"\" + %_#_CLASSNAME_#_%::m_drawDbClassification));",
            "",
            "\t// Register node",
            "\tstatus = plugin.registerNode(%_#_CLASSNAME_#_%::m_typeName,%_#_CLASSNAME_#_%::m_typeId,%_#_CLASSNAME_#_%::creator,%_#_CLASSNAME_#_%::initialize,MPxNode::kHardwareShader,&menuClassify);",
            "\tif (status != MS::kSuccess)",
            "\t{",
                "\t\tstatus.perror(\"registerNode\");",
                "\t\treturn status;",
            "\t}",
            "",
            "\t// Register a shader override for this node",
            "\tstatus = MHWRender::MDrawRegistry::registerShaderOverrideCreator(%_#_CLASSNAME_#_%::m_drawDbClassification,%_#_CLASSNAME_#_%::m_registrantId,%_#_OVERRIDECLASSNAME_#_%::creator);",
            "\tif (status != MS::kSuccess)",
            "\t{",
                "\t\tstatus.perror(\"registerShaderOverrideCreator\");",
                "\t\treturn status;",
            "\t}",
            "",
            "\treturn status;",
        "}"
    ],

    "fn_uninitPlug": [
        "MStatus uninitializePlugin(MObject obj)",
        "{",
            "\tMFnPlugin plugin(obj);",
            "\tMStatus status;",
            "",
            "\tstatus = MHWRender::MDrawRegistry::deregisterShaderOverrideCreator(%_#_CLASSNAME_#_%::m_drawDbClassification,%_#_CLASSNAME_#_%::m_registrantId);",
            "\tif (status != MS::kSuccess)",
            "\t{",
                "\t\tstatus.perror(\"deregisterShaderOverrideCreator\");",
                "\t\treturn status;",
            "\t}",
            "",
            "\tstatus = plugin.deregisterNode(%_#_CLASSNAME_#_%::m_typeId);",
            "\tif (status != MS::kSuccess)",
            "\t{",
                "\t\tstatus.perror(\"deregisterNode\");",
                "\t\treturn status;",
            "\t}",
            "",
            "\treturn status;",
        "}"
    ]
}
